DSEG SEGMENT
ADD1 DB 10,10 DUP(?),"$"
ADD2 DB 10,10 DUP(?),"$"
MESS1 DB "The sum is:$"
SUM  DB 20 DUP('$')
DSEG ENDS
EXTRA1 SEGMENT

EXTRA1 ENDS
CSEG SEGMENT
ASSUME CS:CSEG,DS:DSEG,ES:EXTRA1
START:
MOV AX,DSEG
MOV DS,AX
MOV AX,EXTRA1
MOV ES,AX

MOV AH,0AH
MOV DX,OFFSET ADD1
INT 21H
MOV AH,0AH
MOV DX,OFFSET ADD2
INT 21H

LEA DX,ADD1
ADD DX,2
CALL DISP
EXIT:
MOV AH,4CH
INT 21H

DISP PROC NEAR
PUSH AH
MOV AH,09H
INT 21H
POP AH
RET
DISP ENDP

CSEG ENDS
END START
